@model IEnumerable<TravelExpress.Models.Booking>

@{
    ViewData["Title"] = "All Bookings (Admin)";
}

<h2 class="mt-3 mb-4">📖 All Bookings</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No bookings yet.</div>
}
else
{


<table class="table table-bordered table-hover">
    <thead style="background-color: yellow; color: black;">
        <tr>
            <th>User</th>
            <th>Room</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.User?.UserName</td>
                <td>@booking.Room?.RoomNumber (@booking.Room?.RoomType)</td>
                <td>@booking.CheckIn.ToShortDateString()</td>
                <td>@booking.CheckOut.ToShortDateString()</td>
                <td>₹@booking.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>
}
<a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
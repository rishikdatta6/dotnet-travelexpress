@model TravelExpress.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}



<h4 class="mb-4 text-center">Are you sure you want to delete this room?</h4>

<div style="border: 1px solid #ccc; border-radius: 6px; padding: 16px; background-color: #f9f9f9; display: flex; justify-content: space-between; align-items: center; gap: 24px;">
    <div><strong>Room No:</strong> @Model.RoomNumber</div>
    <div><strong>Type:</strong> @Model.RoomType</div>
    <div><strong>Price:</strong> ₹@Model.PricePerNight</div>
</div>



<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="RoomId" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
    </form>
    <a asp-action="Index" asp-route-hotelId="@Model.HotelId" class="btn btn-secondary">Cancel</a>
</div>

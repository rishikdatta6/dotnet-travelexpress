@model TravelExpress.Models.Room


<h2> Delete Room </h2>

<div>
	<h4> Do you want to delete this room? </h4>
		<hr />
		<dl class="row">
			<dd class="col sm-3"> RoomNumber </dd>
			<dt class="col sm-9"> @Model.RoomNumber </dt>

			<dd class="col sm-3"> RoomType </dd>
			<dt class="col sm-9"> @Model.RoomType </dt>

			<dd class="col sm-3"> PricePerNight </dd>
			<dt class="col sm-9"> @Model.PricePerNight </dt>
		</dl>
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="RoomId" />
	<button type="submit" class="btn btn-danger"> Delete </button>
	<a asp-action="Index" asp-route-hotelId="@Model.HotelId" class="btn btn-secondary"> Cancel </a>
</form>